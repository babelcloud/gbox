{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "outDir": "dist",
        "rootDir": ".."
    },
    "include": [
        "src/**/*",
        "../sdk/typescript/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}