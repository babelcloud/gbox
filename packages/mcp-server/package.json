{
  "name": "gbox-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for GBox",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts src/",
    "lint:fix": "eslint --ext .js,.ts src/ --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "inspect": "SERVER_PORT=9090 npx @modelcontextprotocol/inspector tsx src/index.ts",
    "inspect:dist": "SERVER_PORT=9090 npx @modelcontextprotocol/inspector node dist/index.js",
    "log": "tail -n 20 -F ~/Library/Logs/Claude/mcp-server-gbox.log",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "mcp",
    "gbox",
    "gru",
    "sandbox"
  ],
  "author": "BabelCloud",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv-defaults": "^5.0.2",
    "dotenv-expand": "^12.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dotenv-defaults": "^2.0.4",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "tsup": "^8.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
